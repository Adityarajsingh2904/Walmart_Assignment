{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@trustvault/jwt": ["src/lib/jwt"]
    },
    "typeRoots": ["./src", "./node_modules/@types"]
  },
  "include": ["src/**/*", "tests/**/*"]
}
